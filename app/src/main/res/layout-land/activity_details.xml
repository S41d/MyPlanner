<?xml version="1.0" encoding="utf-8"?>
<TableLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout_details"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:background="@color/blue_400"
    android:shrinkColumns="*"
    android:stretchColumns="*"
    android:padding="4dip"
    tools:context=".controllers.DetailsActivity">
    <TableRow
        android:id="@+id/tableRow1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="4dip">
        <TextView
            android:id="@+id/textview1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:gravity="center"
            android:text="@string/modifier"
            android:textColor="@color/white"
            android:textSize="25sp"
            android:textStyle="bold"/>

    </TableRow>

    <TableRow
        android:id="@+id/tableRow4"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="4dip">

        <TableLayout
            android:id="@+id/tableRow2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/rounded_corner">

            <TableRow
                android:id="@+id/tableRow9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="4dip">

                <TextView
                    android:id="@+id/textview2"
                    android:text="@string/modifier_tache"
                    android:textAlignment="center"
                    android:textColor="@color/black"
                    android:textSize="25sp"
                    android:layout_span="2"/>

            </TableRow>
            <TableRow
                android:id="@+id/tableRow3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="4dip">

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/edit_text_titre_layout"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="290dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:hint="@string/titre"
                    app:startIconDrawable="@drawable/ic_baseline_title_24">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/edit_text_titre"
                        android:layout_width="290dp"
                        android:layout_height="wrap_content"
                        android:inputType="text" />
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/edit_text_description_layout"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="370dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:hint="@string/description"
                    app:startIconDrawable="@drawable/ic_baseline_description_24">
                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/edit_text_description"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="textMultiLine"/>
                </com.google.android.material.textfield.TextInputLayout>
            </TableRow>
            <TableRow
                android:id="@+id/tableRow5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="4dip">
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/edit_text_heure_layout"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="290dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:hint="@string/heure_de_la_tache"
                    app:startIconDrawable="@drawable/ic_baseline_access_time_24">
                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/edit_text_heure"
                        android:layout_width="290dp"
                        android:layout_height="wrap_content"
                        android:focusable="false"
                        android:inputType="time" />
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/edit_text_date_layout"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="370dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:hint="@string/date_de_la_tache"
                    app:startIconDrawable="@drawable/ic_baseline_date_range_24">
                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/edit_text_date"
                        android:layout_width="370dp"
                        android:layout_height="wrap_content"
                        android:focusable="false"
                        android:inputType="date" />
                </com.google.android.material.textfield.TextInputLayout>

            </TableRow>
            <TableRow
                android:id="@+id/tableRow6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="4dip">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnModifierTache"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:backgroundTint="@color/blue_400"
                    android:text="@string/menu_mise_a_jour"
                    android:textColor="@color/white" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnSupprimerTache"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:backgroundTint="@color/blue_400"
                    android:text="@string/supprimer"
                    android:textColor="@color/white"
                    tools:ignore="RelativeOverlap" />
            </TableRow>
        </TableLayout>
    </TableRow>
</TableLayout>
