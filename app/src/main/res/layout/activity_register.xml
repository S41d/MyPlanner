<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="fill_parent"
android:layout_height="fill_parent"
android:background="@drawable/background"
tools:context=".controllers.RegisterActivity">

<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="@string/register"
    android:textSize="50sp"
    android:textColor="#FFFFFF"
    android:layout_alignParentTop = "true"
    android:layout_centerHorizontal = "true"
    android:layout_marginTop="150dp" />

<EditText
    android:id="@+id/email2"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginRight="40dp"
    android:hint="email"
    android:textCursorDrawable="@null"
    android:inputType="textEmailAddress"
    android:drawableStart="@drawable/email"
    android:drawablePadding="5dp"
    android:layout_marginLeft="40dp"
    android:layout_marginTop="250dp"
    android:gravity="start"/>

<EditText
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:hint="password"
    android:textCursorDrawable="@null"
    android:drawableStart="@drawable/lock"
    android:drawablePadding="5dp"
    android:inputType="textPassword"
    android:layout_marginRight="40dp"
    android:layout_marginLeft="40dp"
    android:layout_marginTop="320dp"
    android:id="@+id/pass2"
    android:gravity="start" />

<ImageView
    android:id="@+id/toggle_view2"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="330dp"
    android:layout_marginStart="330dp"
    android:scaleType="centerCrop"
    android:clickable="true"
    android:onClick="toggle"
    android:src="@drawable/eye_off"
    android:focusable="true" />

<EditText
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:hint="username"
    android:textCursorDrawable="@null"
    android:drawableStart="@drawable/account"
    android:drawablePadding="5dp"
    android:inputType="text"
    android:layout_marginRight="40dp"
    android:layout_marginLeft="40dp"
    android:layout_marginTop="390dp"
    android:id="@+id/user2"
    android:gravity="start" />

<Button
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="REGISTER"
    android:id="@+id/register"
    android:textAllCaps="false"
    android:layout_marginRight="40dp"
    android:layout_marginLeft="40dp"
    android:layout_marginTop="510dp"
    android:textColor="#FFF"
    android:textSize="20sp"
    android:background="@drawable/round_button_2"
    android:gravity="center"/>

    <TextView
        android:id="@+id/login1"
        android:layout_width="wrap_content"
        android:layout_height="23dp"
        android:layout_marginStart="100dp"
        android:layout_marginTop="600dp"
        android:focusable="true"
        android:fontFamily="sans-serif"
        android:text="Want to connect to your account ?"
        android:textColor="#FFF"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/login2"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:layout_marginTop="600dp"
        android:layout_toEndOf="@+id/login1"
        android:clickable="true"
        android:focusable="true"
        android:fontFamily="sans-serif"
        android:text="  Login."
        android:textColor="#00d9d9"
        android:textSize="12sp" />

</RelativeLayout>