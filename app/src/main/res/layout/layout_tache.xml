<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="10dp"
    android:padding="10dp"
    android:clickable="true"
    android:background="@drawable/rounded_corner"
    android:id="@+id/itemtaches"
    android:focusable="true">

    <TextView
        android:id="@+id/titreTache"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:textSize="20sp"
        tools:text="@string/montitre" />

    <TextView
        android:id="@+id/descriptionTache"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/titreTache"
        android:text="@string/full_Description"
        android:textColor="@color/black" />

    <TextView
        android:id="@+id/jourTache"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/descriptionTache"
        android:gravity="end"
        android:text="@string/mar"
        android:textColor="@color/black"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/heureTache"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/jourTache"
        android:layout_gravity="center"
        android:gravity="end"
        android:text="@string/_15"
        android:textColor="@color/black"
        android:textSize="12sp" />

</RelativeLayout>
